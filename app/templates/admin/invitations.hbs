<!-- app/templates/admin/invitation.hbs -->

<h1>Lista de Convites</h1>

<table class="table table-bordered table-striped">

    <<thead>
        <tr>
            <th>Id</th>
            <th>E-mail</th>
            <th>Ação</th>

        </tr>
        </thead>
        <tbody>
            {{#each model as |invitation|}}
            <tr>
                <th>
                    {{invitation.id}}
                </th>
                <td>
                    {{invitation.email}}
                </td>
                <td>
                    <button class="btn btn-danger btn-xs" {{ action 'deleteInvitation' invitation }}> Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>

</table>