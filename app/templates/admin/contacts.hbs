<!-- app/templates/admin/invitation.hbs -->

<h1>Lista de Contatos</h1>

<table class="table table-bordered table-striped">

    <<thead>
        <tr>
            <th>Id</th>
            <th>E-mail</th>
            <th>Mensagem</th>
            <th>Ação</th>
            
        </tr>
        </thead>
        <tbody>
            {{#each model as |contact|}}
            <tr>
                <th>
                    {{contact.id}}
                </th>
                <th>
                    {{contact.email}}
                </th>
                <td>
                    {{contact.message}}
                </td>
                <td>
                    <button class="btn btn-danger btn-xs" {{ action 'deleteContact' contact }}>Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>

</table>